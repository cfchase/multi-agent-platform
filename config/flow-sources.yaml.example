# Flow Sources Configuration
# Copy to flow-sources.yaml and customize for your environment
#
# The import-flows.sh script reads this file to discover and import
# flows from various sources into LangFlow.

flow_sources:
  # Built-in examples (always available)
  - name: examples
    type: local
    path: ./langflow-flows/examples
    description: "Built-in example flows"
    enabled: true

  # Example: Public git repository
  # - name: community
  #   type: git
  #   url: https://github.com/org/langflow-flows-public.git
  #   branch: main
  #   path: flows/           # subdirectory within repo containing .json files
  #   description: "Community example flows"
  #   enabled: true

  # Example: Private git repository (requires GITHUB_FLOW_TOKEN env var)
  # - name: enterprise
  #   type: git
  #   url: https://github.com/org/langflow-flows-private.git
  #   branch: main
  #   path: flows/
  #   description: "Enterprise flows"
  #   auth:
  #     type: token
  #     env_var: GITHUB_FLOW_TOKEN
  #   enabled: true
